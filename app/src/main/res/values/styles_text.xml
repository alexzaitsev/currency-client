<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" />

    <style name="Text.AdvertLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Text.DrawerBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.AdapterMoneyLabel">
        <item name="android:layout_width">@dimen/size_adapter_money_label</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.AdapterMoneyValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.AdapterCheckLabel">
        <item name="android:layout_width">@dimen/size_adapter_check_label</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Greater">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>
        <item name="android:text">></item>
        <item name="android:textSize">50dp</item>
    </style>

</resources>