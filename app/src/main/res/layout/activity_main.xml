<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Layout.Main">

    <fragment
        android:id="@+id/fragment_advert_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="pro.alex_zaitsev.currency.fragment.AdvertListFragment"
        tools:layout="@layout/fragment_base_list" />

    <fragment
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="pro.alex_zaitsev.currency.fragment.DrawerFragment"
        tools:layout="@layout/fragment_drawer" />

</android.support.v4.widget.DrawerLayout>
